@page "/my-cases"
@using SD.Mercato.UI.Client.Services
@inject ICaseService CaseService
@inject NavigationManager Navigation

<PageTitle>My Cases - Mercato</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">My Cases (Returns & Complaints)</h1>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="statusFilter" class="form-label">Status</label>
                    <select id="statusFilter" class="form-select" @bind="selectedStatus" @bind:after="ApplyFilters">
                        <option value="">All Statuses</option>
                        <option value="New">New</option>
                        <option value="In Review">In Review</option>
                        <option value="Accepted">Accepted</option>
                        <option value="Rejected">Rejected</option>
                        <option value="Resolved">Resolved</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="typeFilter" class="form-label">Type</label>
                    <select id="typeFilter" class="form-select" @bind="selectedType" @bind:after="ApplyFilters">
                        <option value="">All Types</option>
                        <option value="Return">Return</option>
                        <option value="Complaint">Complaint</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" id="fromDate" class="form-control" @bind="fromDate" @bind:after="ApplyFilters" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="ClearFilters">
                        Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (response == null || response.Cases == null || !response.Cases.Any())
    {
        <div class="alert alert-info">
            <h4>No cases found</h4>
            <p>@(string.IsNullOrEmpty(selectedStatus) && string.IsNullOrEmpty(selectedType) && !fromDate.HasValue 
                ? "You haven't created any cases yet." 
                : "No cases match your current filters.")</p>
            @if (!string.IsNullOrEmpty(selectedStatus) || !string.IsNullOrEmpty(selectedType) || fromDate.HasValue)
            {
                <button class="btn btn-primary" @onclick="ClearFilters">Clear Filters</button>
            }
            else
            {
                <a href="/orders" class="btn btn-primary">View My Orders</a>
            }
        </div>
    }
    else
    {
        @foreach (var caseItem in response.Cases)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                Case #@caseItem.CaseNumber
                            </h5>
                            <small class="text-muted">Created on @caseItem.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <span class="badge bg-@GetTypeBadgeClass(caseItem.CaseType)">
                                @caseItem.CaseType
                            </span>
                            <span class="badge bg-@GetStatusBadgeClass(caseItem.Status) ms-2">
                                @caseItem.Status
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6>Case Details</h6>
                            <p class="mb-2">
                                <strong>Order:</strong> @caseItem.OrderNumber<br />
                                <strong>Seller:</strong> @caseItem.StoreName<br />
                                @if (!string.IsNullOrEmpty(caseItem.ProductTitle))
                                {
                                    <strong>Product:</strong> @caseItem.ProductTitle<br />
                                }
                                <strong>Reason:</strong> @caseItem.Reason
                            </p>
                            
                            <h6 class="mt-3">Description</h6>
                            <p>@caseItem.Description</p>

                            @if (!string.IsNullOrEmpty(caseItem.Resolution))
                            {
                                <h6 class="mt-3">Resolution</h6>
                                <div class="alert alert-success">
                                    @caseItem.Resolution
                                </div>
                            }

                            @if (caseItem.Messages.Any())
                            {
                                <h6 class="mt-3">Messages (@caseItem.Messages.Count)</h6>
                                <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                                    @foreach (var msg in caseItem.Messages)
                                    {
                                        <div class="mb-2 pb-2 border-bottom">
                                            <div class="d-flex justify-content-between">
                                                <strong>@msg.SenderName (@msg.SenderRole)</strong>
                                                <small class="text-muted">@msg.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                            </div>
                                            <p class="mb-0 small">@msg.Message</p>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        <div class="col-md-4">
                            <h6>Actions</h6>
                            <button class="btn btn-outline-primary btn-sm w-100 mb-2" @onclick="@(() => ViewCaseDetails(caseItem.Id))">
                                View Full Details
                            </button>
                            
                            @if (caseItem.Status != "Resolved")
                            {
                                <button class="btn btn-outline-secondary btn-sm w-100" @onclick="@(() => ShowAddMessageModal(caseItem.Id))">
                                    Add Message
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <!-- Pagination -->
        @if (response.TotalPages > 1)
        {
            <nav aria-label="Case list pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" @onclick="@(() => GoToPage(currentPage - 1))" href="javascript:void(0)">Previous</a>
                    </li>
                    
                    @for (int i = 1; i <= response.TotalPages; i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(currentPage == pageNum ? "active" : "")">
                            <a class="page-link" @onclick="@(() => GoToPage(pageNum))" href="javascript:void(0)">@pageNum</a>
                        </li>
                    }
                    
                    <li class="page-item @(currentPage == response.TotalPages ? "disabled" : "")">
                        <a class="page-link" @onclick="@(() => GoToPage(currentPage + 1))" href="javascript:void(0)">Next</a>
                    </li>
                </ul>
            </nav>
            
            <div class="text-center text-muted mb-3">
                Showing @response.Cases.Count of @response.TotalCount cases
            </div>
        }
    }
</div>

@code {
    private CaseListResponseDto? response;
    private bool isLoading = true;
    
    private string selectedStatus = "";
    private string selectedType = "";
    private DateTime? fromDate;
    private int currentPage = 1;
    private readonly int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadCases();
    }

    private async Task LoadCases()
    {
        isLoading = true;
        
        response = await CaseService.GetBuyerCasesAsync(
            string.IsNullOrEmpty(selectedStatus) ? null : selectedStatus,
            string.IsNullOrEmpty(selectedType) ? null : selectedType,
            fromDate,
            null,
            currentPage,
            pageSize
        );
        
        isLoading = false;
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadCases();
    }

    private async Task ClearFilters()
    {
        selectedStatus = "";
        selectedType = "";
        fromDate = null;
        currentPage = 1;
        await LoadCases();
    }

    private async Task GoToPage(int page)
    {
        if (page < 1 || (response != null && page > response.TotalPages))
            return;
        
        currentPage = page;
        await LoadCases();
    }

    private void ViewCaseDetails(Guid caseId)
    {
        Navigation.NavigateTo($"/cases/{caseId}");
    }

    private void ShowAddMessageModal(Guid caseId)
    {
        // TODO: Implement modal for adding messages
        Navigation.NavigateTo($"/cases/{caseId}");
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "New" => "primary",
            "In Review" => "info",
            "Accepted" => "success",
            "Rejected" => "danger",
            "Resolved" => "secondary",
            _ => "secondary"
        };
    }

    private string GetTypeBadgeClass(string type)
    {
        return type switch
        {
            "Return" => "warning",
            "Complaint" => "danger",
            _ => "secondary"
        };
    }
}
