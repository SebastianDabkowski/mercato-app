@page "/admin/stores"
@using SD.Mercato.UI.Client.Services
@inject IAdminStoreService AdminStoreService
@inject NavigationManager Navigation
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]

<PageTitle>Store Management</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Store Management</h3>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }

    <!-- Search and Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" @bind="searchTerm" @bind:event="oninput" placeholder="Store name, owner email..." />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="selectedStatus">
                        <option value="">All</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Verified</label>
                    <select class="form-select" @bind="selectedVerified">
                        <option value="">All</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" @onclick="SearchStores">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (storesResponse != null && storesResponse.Stores.Any())
    {
        <!-- Stores Table -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Store Name</th>
                                <th>Owner</th>
                                <th>Status</th>
                                <th>Verified</th>
                                <th>Products</th>
                                <th>Orders</th>
                                <th>Revenue</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var store in storesResponse.Stores)
                            {
                                <tr>
                                    <td>
                                        <div><strong>@store.DisplayName</strong></div>
                                        <small class="text-muted">@store.StoreName</small>
                                    </td>
                                    <td>
                                        <div>@store.OwnerName</div>
                                        <small class="text-muted">@store.OwnerEmail</small>
                                    </td>
                                    <td>
                                        @if (store.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (store.IsVerified)
                                        {
                                            <i class="bi bi-patch-check-fill text-success fs-5"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-patch-exclamation-fill text-warning fs-5"></i>
                                        }
                                    </td>
                                    <td>@store.ProductCount</td>
                                    <td>@store.OrderCount</td>
                                    <td>$@store.TotalRevenue.ToString("N2")</td>
                                    <td>@store.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary" @onclick="() => ViewStoreDetail(store.Id)">
                                            <i class="bi bi-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (storesResponse.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Previous</button>
                            </li>
                            @for (int i = 1; i <= storesResponse.TotalPages; i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(pageNum == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == storesResponse.TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Next</button>
                            </li>
                        </ul>
                    </nav>
                }

                <div class="text-center text-muted mt-2">
                    Showing @storesResponse.Stores.Count of @storesResponse.TotalCount stores
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No stores found.
        </div>
    }
</div>

@code {
    private PaginatedStoresResponse? storesResponse;
    private string searchTerm = string.Empty;
    private string selectedStatus = string.Empty;
    private string selectedVerified = string.Empty;
    private int currentPage = 1;
    private int pageSize = 20;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await SearchStores();
    }

    private async Task SearchStores()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            bool? isActive = string.IsNullOrEmpty(selectedStatus) ? null : bool.Parse(selectedStatus);
            bool? isVerified = string.IsNullOrEmpty(selectedVerified) ? null : bool.Parse(selectedVerified);

            storesResponse = await AdminStoreService.SearchStoresAsync(
                searchTerm,
                isActive,
                isVerified,
                currentPage,
                pageSize);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading stores: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || (storesResponse != null && page > storesResponse.TotalPages))
            return;

        currentPage = page;
        await SearchStores();
    }

    private void ViewStoreDetail(Guid storeId)
    {
        Navigation.NavigateTo($"/admin/stores/{storeId}");
    }
}
