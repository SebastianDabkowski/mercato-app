@page "/seller/orders"
@using SD.Mercato.UI.Client.Services
@inject ISellerOrderService SellerOrderService
@inject NavigationManager Navigation
@inject IAuthService AuthService

<PageTitle>My Orders - Seller Panel - Mercato</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Orders</h1>
        <div class="text-muted">
            Seller Panel
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="statusFilter" class="form-label">Status</label>
                    <select id="statusFilter" class="form-select" @bind="selectedStatus" @bind:after="ApplyFilters">
                        <option value="">All Statuses</option>
                        <option value="Processing">Processing</option>
                        <option value="Shipped">Shipped</option>
                        <option value="Delivered">Delivered</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" id="fromDate" class="form-control" @bind="fromDate" @bind:after="ApplyFilters" />
                </div>
                <div class="col-md-3">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" id="toDate" class="form-control" @bind="toDate" @bind:after="ApplyFilters" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" @onclick="ClearFilters">
                        Clear Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (response == null || response.SubOrders == null || !response.SubOrders.Any())
    {
        <div class="alert alert-info">
            <h4>No orders found</h4>
            <p>You don't have any orders matching the current filters.</p>
        </div>
    }
    else
    {
        <!-- Orders List -->
        @foreach (var subOrder in response.SubOrders)
        {
            <div class="card mb-3 @(GetCardBorderClass(subOrder.Status))">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                Order #@subOrder.SubOrderNumber
                            </h5>
                            <small class="text-muted">
                                Placed on @subOrder.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                            </small>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <span class="badge bg-@GetStatusBadgeClass(subOrder.Status) fs-6">
                                @subOrder.Status
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6>Items (@subOrder.Items.Count)</h6>
                            @foreach (var item in subOrder.Items)
                            {
                                <div class="d-flex align-items-center mb-2">
                                    @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                    {
                                        <img src="@item.ProductImageUrl" alt="@item.ProductTitle" 
                                             class="me-3" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    <div class="flex-grow-1">
                                        <div>@item.ProductTitle</div>
                                        <small class="text-muted">SKU: @item.ProductSku</small>
                                    </div>
                                    <div class="text-end">
                                        <div>Qty: @item.Quantity</div>
                                        <small class="text-muted">$@item.UnitPrice.ToString("F2") each</small>
                                    </div>
                                </div>
                            }
                            
                            <hr />
                            
                            <h6 class="mt-3">Delivery Address</h6>
                            <div class="text-muted small">
                                @subOrder.DeliveryRecipientName<br />
                                @subOrder.DeliveryAddressLine1<br />
                                @if (!string.IsNullOrEmpty(subOrder.DeliveryAddressLine2))
                                {
                                    @subOrder.DeliveryAddressLine2<br />
                                }
                                @subOrder.DeliveryCity, @subOrder.DeliveryState @subOrder.DeliveryPostalCode<br />
                                @subOrder.DeliveryCountry
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h6>Order Summary</h6>
                            <div class="d-flex justify-content-between mb-1">
                                <span>Products:</span>
                                <span>$@subOrder.ProductsTotal.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-1">
                                <span>Shipping:</span>
                                <span>$@subOrder.ShippingCost.ToString("F2")</span>
                            </div>
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong class="text-primary">$@subOrder.TotalAmount.ToString("F2")</strong>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(subOrder.TrackingNumber))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Tracking:</small><br />
                                    <code>@subOrder.TrackingNumber</code>
                                </div>
                            }
                            
                            @if (subOrder.ShippedAt.HasValue)
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Shipped on:</small><br />
                                    <span>@subOrder.ShippedAt.Value.ToString("MMM dd, yyyy")</span>
                                </div>
                            }
                            
                            <button class="btn btn-primary w-100" @onclick="@(() => ViewOrderDetails(subOrder.Id))">
                                Manage Order
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Pagination -->
        @if (response.TotalPages > 1)
        {
            <nav aria-label="Order list pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" @onclick="@(() => GoToPage(currentPage - 1))" href="javascript:void(0)">Previous</a>
                    </li>
                    
                    @for (int i = 1; i <= response.TotalPages; i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(currentPage == pageNum ? "active" : "")">
                            <a class="page-link" @onclick="@(() => GoToPage(pageNum))" href="javascript:void(0)">@pageNum</a>
                        </li>
                    }
                    
                    <li class="page-item @(currentPage == response.TotalPages ? "disabled" : "")">
                        <a class="page-link" @onclick="@(() => GoToPage(currentPage + 1))" href="javascript:void(0)">Next</a>
                    </li>
                </ul>
            </nav>
            
            <div class="text-center text-muted mb-3">
                Showing @response.SubOrders.Count of @response.TotalCount orders
            </div>
        }
    }
</div>

@code {
    private SubOrderListResponse? response;
    private bool isLoading = true;
    
    private string selectedStatus = "";
    private DateTime? fromDate;
    private DateTime? toDate;
    private int currentPage = 1;
    private int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        isLoading = true;
        
        response = await SellerOrderService.GetSubOrdersAsync(
            string.IsNullOrEmpty(selectedStatus) ? null : selectedStatus,
            fromDate,
            toDate,
            currentPage,
            pageSize
        );
        
        isLoading = false;
    }

    private async Task ApplyFilters()
    {
        currentPage = 1; // Reset to first page when filters change
        await LoadOrders();
    }

    private async Task ClearFilters()
    {
        selectedStatus = "";
        fromDate = null;
        toDate = null;
        currentPage = 1;
        await LoadOrders();
    }

    private async Task GoToPage(int page)
    {
        if (page < 1 || (response != null && page > response.TotalPages))
            return;
        
        currentPage = page;
        await LoadOrders();
    }

    private void ViewOrderDetails(Guid subOrderId)
    {
        Navigation.NavigateTo($"/seller/orders/{subOrderId}");
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Processing" => "warning",
            "Shipped" => "info",
            "Delivered" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }

    private string GetCardBorderClass(string status)
    {
        return status switch
        {
            "Processing" => "border-warning",
            "Shipped" => "border-info",
            "Delivered" => "border-success",
            "Cancelled" => "border-danger",
            _ => ""
        };
    }
}
