@page "/admin/categories"
@using SD.Mercato.UI.Client.Services
@inject IAdminCategoryService AdminCategoryService
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrator")]

<PageTitle>Category Management (Admin)</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Category Management</h3>
        <button class="btn btn-primary" @onclick="ShowCreateForm">
            <i class="bi bi-plus-circle"></i> Add Category
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }

    @if (showForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">@(editingCategory == null ? "Create Category" : "Edit Category")</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Category Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="categoryName" placeholder="e.g., Electronics" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Parent Category</label>
                        <select class="form-select" @bind="selectedParentId">
                            <option value="">None (Root Category)</option>
                            @if (categories != null)
                            {
                                @foreach (var cat in categories.Where(c => c.Id != editingCategory?.Id))
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="3" @bind="categoryDescription" placeholder="Optional category description"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Default Commission Rate (%)</label>
                        <input type="number" step="0.01" min="0" max="100" class="form-control" @bind="commissionRatePercent" placeholder="Leave empty for store default" />
                        <small class="text-muted">Optional: Override store commission for this category</small>
                    </div>

                    @if (editingCategory != null)
                    {
                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <select class="form-select" @bind="isActive">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label">Reason for Change</label>
                            <input type="text" class="form-control" @bind="updateReason" placeholder="Optional reason for this update" />
                        </div>
                    }

                    <div class="col-md-12">
                        <button class="btn btn-success me-2" @onclick="SaveCategory">
                            <i class="bi bi-check-circle"></i> @(editingCategory == null ? "Create" : "Update")
                        </button>
                        <button class="btn btn-secondary" @onclick="CancelEdit">
                            <i class="bi bi-x-circle"></i> Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (categories != null && categories.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Parent Category</th>
                                <th>Status</th>
                                <th>Commission Rate</th>
                                <th>Products</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in categories)
                            {
                                <tr>
                                    <td>
                                        <strong>@category.Name</strong>
                                        @if (!string.IsNullOrEmpty(category.Description))
                                        {
                                            <br /><small class="text-muted">@category.Description</small>
                                        }
                                    </td>
                                    <td>@(category.ParentCategoryName ?? "â€”")</td>
                                    <td>
                                        @if (category.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (category.DefaultCommissionRate.HasValue)
                                        {
                                            <span>@((category.DefaultCommissionRate.Value * 100).ToString("F2"))%</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Store default</span>
                                        }
                                    </td>
                                    <td>@category.ProductCount</td>
                                    <td>@category.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary me-1" @onclick="() => EditCategory(category)">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        @if (category.ProductCount == 0)
                                        {
                                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteCategory(category.Id)">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No categories found.
        </div>
    }
</div>

@code {
    private List<AdminCategoryDto>? categories;
    private AdminCategoryDto? editingCategory;
    private bool showForm = false;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    // Form fields
    private string categoryName = string.Empty;
    private string categoryDescription = string.Empty;
    private string selectedParentId = string.Empty;
    private decimal? commissionRatePercent;
    private string isActive = "true";
    private string updateReason = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }

    private async Task LoadCategories()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            categories = await AdminCategoryService.GetAllCategoriesAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading categories: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowCreateForm()
    {
        editingCategory = null;
        categoryName = string.Empty;
        categoryDescription = string.Empty;
        selectedParentId = string.Empty;
        commissionRatePercent = null;
        isActive = "true";
        updateReason = string.Empty;
        showForm = true;
    }

    private void EditCategory(AdminCategoryDto category)
    {
        editingCategory = category;
        categoryName = category.Name;
        categoryDescription = category.Description ?? string.Empty;
        selectedParentId = category.ParentCategoryId?.ToString() ?? string.Empty;
        commissionRatePercent = category.DefaultCommissionRate.HasValue ? category.DefaultCommissionRate.Value * 100 : null;
        isActive = category.IsActive.ToString().ToLower();
        updateReason = string.Empty;
        showForm = true;
    }

    private void CancelEdit()
    {
        showForm = false;
        editingCategory = null;
    }

    private async Task SaveCategory()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(categoryName))
            {
                errorMessage = "Category name is required";
                return;
            }

            errorMessage = string.Empty;
            successMessage = string.Empty;

            decimal? commissionRate = commissionRatePercent.HasValue ? commissionRatePercent.Value / 100 : null;
            Guid? parentId = string.IsNullOrEmpty(selectedParentId) ? null : Guid.Parse(selectedParentId);

            if (editingCategory == null)
            {
                // Create new category
                var request = new AdminCreateCategoryRequest
                {
                    Name = categoryName,
                    Description = categoryDescription,
                    ParentCategoryId = parentId,
                    DefaultCommissionRate = commissionRate
                };

                var result = await AdminCategoryService.CreateCategoryAsync(request);
                if (result != null)
                {
                    successMessage = "Category created successfully";
                    showForm = false;
                    await LoadCategories();
                }
                else
                {
                    errorMessage = "Failed to create category";
                }
            }
            else
            {
                // Update existing category
                var request = new AdminUpdateCategoryRequest
                {
                    Name = categoryName,
                    Description = categoryDescription,
                    ParentCategoryId = parentId,
                    DefaultCommissionRate = commissionRate,
                    IsActive = bool.Parse(isActive),
                    Reason = updateReason
                };

                var result = await AdminCategoryService.UpdateCategoryAsync(editingCategory.Id, request);
                if (result != null)
                {
                    successMessage = "Category updated successfully";
                    showForm = false;
                    await LoadCategories();
                }
                else
                {
                    errorMessage = "Failed to update category";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving category: {ex.Message}";
        }
    }

    private async Task DeleteCategory(Guid categoryId)
    {
        try
        {
            if (!await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this category?"))
                return;

            var success = await AdminCategoryService.DeleteCategoryAsync(categoryId);
            if (success)
            {
                successMessage = "Category deleted successfully";
                await LoadCategories();
            }
            else
            {
                errorMessage = "Failed to delete category";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting category: {ex.Message}";
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
